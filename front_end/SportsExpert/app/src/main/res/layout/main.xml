<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/camera_back"/>
    <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/camera_position"/>
    <SurfaceView android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/camera_surface"/>
    <android.support.v7.widget.AppCompatImageButton android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content" android:id="@+id/camera_shutter"/>

</LinearLayout>
